# Agent LLM Deployment System Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Security
SECRET_KEY=your-secret-key-here

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
DATABASE_URL=sqlite:///data/deployment.db

# Hugging Face Integration for Database Sync
HF_TOKEN=your-hugging-face-token-here
DATABASE_ID=your-username/agent-llm-deployment-db

# LLM Configuration (Multi-provider support)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
AIPIPE_KEY=your-aipipe-key-here

# GitHub Integration
GITHUB_TOKEN=your-github-token-here
ENABLE_GITHUB_INTEGRATION=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_CONTENT_LENGTH=16777216

# Task Processing
MAX_CONCURRENT_TASKS=3
TASK_TIMEOUT_MINUTES=10

# Redis (for Celery/Background Tasks)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Deployment
DEPLOYMENT_ENV=development
